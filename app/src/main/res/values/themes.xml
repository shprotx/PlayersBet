<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/pageBackground</item>
        <item name="android:navigationBarColor">@color/menuBg</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />

    <style name="CountdownProgress" parent="android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_height">5dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:progressBackgroundTint">@color/white</item>
        <item name="android:progressTint">@color/green</item>
    </style>

    <style name="NavigationItemSelected" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto_500</item>
    </style>

    <style name="NavigationItemUnselected" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto_500</item>
    </style>

    <style name="MenuIndicatorStyle" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/menuIndicatorColor</item>
    </style>

</resources>