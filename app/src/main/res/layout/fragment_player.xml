<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pageBackground"
        tools:context=".app.screens.PlayerFragment">


        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:src="@drawable/arrow_back"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/ivBack"
                android:fontFamily="@font/roboto_600"
                android:text="Back"
                android:textColor="@color/toolbar_color"
                android:textFontWeight="600"
                android:textSize="18sp"
                tools:targetApi="31" />

            <ImageView
                android:id="@+id/ivSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/star_half"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/player_item_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />

        <LinearLayout
            android:id="@+id/llPlayerInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/item_player_background"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical"
                android:paddingStart="18dp">

                <TextView
                    android:id="@+id/tvClub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_400"
                    android:text="Paris Saint German"
                    android:textColor="@color/secondary"
                    android:textFontWeight="400"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText"
                    tools:targetApi="31" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/roboto_600"
                    android:text="Paris Saint German"
                    android:textColor="@color/progress_color"
                    android:textFontWeight="600"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText"
                    tools:targetApi="31" />

                <TextView
                    android:id="@+id/tvLastName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/roboto_600"
                    android:text="Paris Saint German"
                    android:textColor="@color/secondary"
                    android:textFontWeight="600"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText"
                    tools:targetApi="31" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                app:cardCornerRadius="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivPlayer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/neymar"
                    tools:ignore="ContentDescription" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/tvGeneral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/roboto_400"
            android:text="General"
            android:textColor="@color/secondary"
            android:textFontWeight="400"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llPlayerInfo"
            tools:ignore="HardcodedText"
            tools:targetApi="31" />

        <RelativeLayout
            android:id="@+id/llAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_bg"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvGeneral">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_600"
                android:text="Age"
                android:textColor="@color/toolbar_color"
                android:textFontWeight="600"
                android:textSize="18sp"
                tools:ignore="HardcodedText"
                tools:targetApi="31" />

            <TextView
                android:id="@+id/tvAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/roboto_600"
                android:text="18"
                android:textColor="@color/progress_color"
                android:textFontWeight="600"
                android:textSize="18sp"
                tools:ignore="HardcodedText"
                tools:targetApi="31" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/llBirthDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_bg"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llAge">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_600"
                android:text="Birth Date"
                android:textColor="@color/toolbar_color"
                android:textFontWeight="600"
                android:textSize="18sp"
                tools:ignore="HardcodedText"
                tools:targetApi="31" />

            <TextView
                android:id="@+id/tvBirthDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/roboto_600"
                android:text="1992-02-05"
                android:textColor="@color/progress_color"
                android:textFontWeight="600"
                android:textSize="18sp"
                tools:ignore="HardcodedText"
                tools:targetApi="31" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/llBirthPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_bg"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llBirthDate">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_600"
                android:text="Birth Place"
                android:textColor="@color/toolbar_color"
                android:textFontWeight="600"
                android:textSize="18sp"
                tools:ignore="HardcodedText"
                tools:targetApi="31" />

            <TextView
                android:id="@+id/tvBirthPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/roboto_600"
                android:text="Mogi das Cruzes"
                android:textColor="@color/progress_color"
                android:textFontWeight="600"
                android:textSize="18sp"
                tools:ignore="HardcodedText"
                tools:targetApi="31" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/llBirthCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_bg"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llBirthPlace">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_600"
                android:text="Birth Country"
                android:textColor="@color/toolbar_color"
                android:textFontWeight="600"
                android:textSize="18sp"
                tools:ignore="HardcodedText"
                tools:targetApi="31" />

            <TextView
                android:id="@+id/tvBirthCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/roboto_600"
                android:text="Country"
                android:textColor="@color/progress_color"
                android:textFontWeight="600"
                android:textSize="18sp"
                tools:ignore="HardcodedText"
                tools:targetApi="31" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/llHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_bg"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llBirthCountry">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_600"
                android:text="Height"
                android:textColor="@color/toolbar_color"
                android:textFontWeight="600"
                android:textSize="18sp"
                tools:ignore="HardcodedText"
                tools:targetApi="31" />

            <TextView
                android:id="@+id/tvHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/roboto_600"
                android:text="175cm"
                android:textColor="@color/progress_color"
                android:textFontWeight="600"
                android:textSize="18sp"
                tools:ignore="HardcodedText"
                tools:targetApi="31" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/llWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_bg"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llBirthCountry">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_600"
                android:text="Weight"
                android:textColor="@color/toolbar_color"
                android:textFontWeight="600"
                android:textSize="18sp"
                tools:ignore="HardcodedText"
                tools:targetApi="31" />

            <TextView
                android:id="@+id/tvWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/roboto_600"
                android:text="68kg"
                android:textColor="@color/progress_color"
                android:textFontWeight="600"
                android:textSize="18sp"
                tools:ignore="HardcodedText"
                tools:targetApi="31" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvMoreInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_600"
            android:text="Football info"
            android:textColor="@color/secondary"
            android:textFontWeight="400"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llWeight"
            tools:ignore="HardcodedText"
            tools:targetApi="31" />

        <RelativeLayout
            android:id="@+id/llTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_bg"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvMoreInfo">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_600"
                android:text="Team"
                android:textColor="@color/toolbar_color"
                android:textFontWeight="600"
                android:textSize="18sp"
                tools:ignore="HardcodedText"
                tools:targetApi="31" />

            <TextView
                android:id="@+id/tvTeamRepeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/roboto_600"
                android:text="PSG"
                android:textColor="@color/progress_color"
                android:textFontWeight="600"
                android:textSize="18sp"
                tools:ignore="HardcodedText"
                tools:targetApi="31" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/llLeague"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_bg"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llTeam">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_600"
                android:text="League"
                android:textColor="@color/toolbar_color"
                android:textFontWeight="600"
                android:textSize="18sp"
                tools:ignore="HardcodedText"
                tools:targetApi="31" />

            <TextView
                android:id="@+id/tvLeague"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/roboto_600"
                android:text="League 1"
                android:textColor="@color/progress_color"
                android:textFontWeight="600"
                android:textSize="18sp"
                tools:ignore="HardcodedText"
                tools:targetApi="31" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/llClubCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edit_text_bg"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llLeague">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_600"
                android:text="Country"
                android:textColor="@color/toolbar_color"
                android:textFontWeight="600"
                android:textSize="18sp"
                tools:ignore="HardcodedText"
                tools:targetApi="31" />

            <TextView
                android:id="@+id/tvClubCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/roboto_600"
                android:text="France"
                android:textColor="@color/progress_color"
                android:textFontWeight="600"
                android:textSize="18sp"
                tools:ignore="HardcodedText"
                tools:targetApi="31" />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>